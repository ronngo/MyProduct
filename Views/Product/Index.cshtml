@{
}

@model List<MyProduct.Models.Product>

<h1>Product Page</h1>

<p>
    @ViewBag.Message
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img class="img-responsive fit-image" src="@item.ImageUrl" alt="Alternate Text" />

                <div class="caption">
                    <h3>@item.Price.ToString("c")</h3>
                    <h3>@item.Name</h3>
                    <h4>@item.Category.CategoryName</h4>
                    <p>@item.Description</p>
                </div>
            </div>
        </div>
    }
</div>
